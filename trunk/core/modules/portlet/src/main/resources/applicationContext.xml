<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="propertyConfigurer" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="location" value="datasource.properties" />
    </bean>

    <bean id="dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="org.postgresql.Driver" />
        <property name="url" value="jdbc:postgresql://antonio.vgregion.se:5432/lportal" />
        <property name="username" value="liferay" />
    </bean>

    <bean name="credentialStoreRepository" class="se.vgregion.portal.repository.JDBCCredentialStoreRepository">
        <property name="dataSource" ref="dataSource" />
        <property name="cryptoUtils" ref="cryptoUtils" />
    </bean>

    <bean name="cryptoUtils" class="se.vgregion.portal.iframe.util.CryptoUtilImpl">
        <property name="keyFile" value="classpath:cv.key" />
    </bean>
    
</beans>