<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="http://www.springframework.org/schema/beans
							http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<!-- Configuration to support system testing the rewards application. -->

	<!-- Imports application configuration -->
	<import resource="classpath:applicationContext.xml"/>
	
	<!-- Creates an in-memory "rewards" database populated with test data for fast testing -->
	<bean id="dataSource" class="dbsetup.DataSourceFactory">
		<property name="testDatabaseName" value="csportal"/>
		<property name="schemaLocation" value="classpath:dbsetup/schema.sql"/>
		<property name="testDataLocation" value="classpath:dbsetup/test-data.sql"/>
	</bean>

    <bean name="cryptoUtils" class="se.vgregion.portal.iframe.util.CryptoUtilImpl">
    </bean>

</beans>